<resources>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.NoActionBar">
    <!--  &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/light_theme_bac1</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/purple </item>
    </style>


    <style name="AppThemeDark"  parent="Theme.AppCompat.NoActionBar">
<!--    &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/dark_theme_bac2</item>
        <item name="color">@color/orange</item>
    </style>

    <style name="While">
        <item name="android:textSize">@dimen/TextsizeWheel</item>
        <item name="android:padding">@dimen/PaddingWhile</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

