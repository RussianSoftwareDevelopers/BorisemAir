<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">






    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:layout_marginHorizontal="@dimen/marginwheel"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_right_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textRightBottomWheel_UP"
        style="@style/While"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/text_info_passive"
        android:text="@string/textinfobarRight"

        android:textAlignment="center" />


    <TextView
        android:id="@+id/textRightBottomWheel"
        style="@style/While"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:gravity="center"
        android:background="@drawable/text_info_passive"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textRightBottomWheel_DOWN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_info_passive"
        android:textAlignment="center"
        style="@style/While"

        android:text="@string/textinfobarBack"
         />
</LinearLayout>
</RelativeLayout>