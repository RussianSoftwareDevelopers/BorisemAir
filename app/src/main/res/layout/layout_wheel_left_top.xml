<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">






    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/grey"
        android:layout_marginHorizontal="@dimen/marginwheel"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_left_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textLeftTopWheel_UP"
        style="@style/While"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/text_info_passive"
        android:text="@string/textinfobarLeft"

         />


    <TextView
        android:id="@+id/textLeftTopWheel"
        style="@style/While"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"


        android:background="@drawable/text_info_passive"
        android:gravity="center_vertical|center_horizontal" />


    <TextView
        android:id="@+id/textLeftTopWheel_DOWN"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/text_info_passive"
        android:gravity="center_vertical|center_horizontal"
        style="@style/While"
        android:layout_weight="1"
        android:text="@string/textinfobarFront"
         />
    </LinearLayout>
</RelativeLayout>