<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bac"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/Button_LP_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/Button_LP_Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:rotation="180"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="45dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/Button_LZ_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/Button_LZ_Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:rotation="180"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/button_RP_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/button_RP_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:rotation="180"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <Button
        android:id="@+id/menu1"
        android:layout_width="174dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_center_shape"
        android:text="Borisem"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="82dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/menu"
        android:layout_width="74dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_center_shape"
        android:text="Borisem"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="130dp" />

    <view
        android:id="@+id/Button_All_Down"
        class="com.borisem.borisemair.Draw2D"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="379dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="45dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_RZ_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/Button_RZ_Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_back"
            android:rotation="180"
            app:srcCompat="@drawable/ic_up_btn"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>